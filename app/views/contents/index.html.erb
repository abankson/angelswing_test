<h1>Project Contents</h1>

<%= link_to "Create New Project", new_project_path %>

<% @content_items.each do |item| %>
  <h2> <%= link_to item.title, content_path(item)%> </h2>
  <h3> Project: <%= link_to Project.find(item.project_id).title, project_path(item.project_id) %> </h3>
  <p> Type: <%= item.content_type %> </p>

  <%= link_to "Edit", edit_content_path(item.id) %>
  <%= link_to "Delete Content", content_path(item), method: :delete, data: { confirm: "Are you sure?" } %>

<% end %>