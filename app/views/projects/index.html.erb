<h1>Projects</h1>

<%= link_to "Create New Project", new_project_path %>

<% @project_items.each do |item| %>
  <h2> <%= link_to item.title, project_path(item)%> </h2>
  <p> <%= item.description %> </p>
  <p> <%= image_tag item.thumbnail unless item.thumbnail.nil? %> </p>

  <p> <%= link_to "Edit", edit_project_path(item.id) if logged_in?(:site_admin, :user) %> </p>
  <p> <%= link_to "Delete Project", project_path(item), method: :delete, data: { confirm: "Are you sure?" } if logged_in?(:site_admin) %> </p>

<% end %>